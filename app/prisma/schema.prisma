generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int  @id @default(autoincrement())
  name String
  email String @unique
  password String
  role Role @default(USER) 
  avatar String?
  age Int?
  phoneNumber Int? @unique
  address String?
  gender Gender?
  isActive Boolean? @default(true)
  verificationCode String?
}

enum Role {
  ADMIN
  USER
}

enum Gender {
  MALE
  FEMALE
}

model category {
  id Int @id @default(autoincrement())
  name String
  image String
  subCategories subCategory[]
}

model subCategory {
  id Int @id @default(autoincrement())
  category category @relation(fields: [categoryId], references: [id])
  name String
  categoryId Int
}

model brand {
  id Int @id @default(autoincrement())
  name String
  image String
}

model coupon {
  id Int @id @default(autoincrement())
  code String
  discount Int
  isActive Boolean?
  expireDate String
}

model suppliers {
  id Int @id @default(autoincrement())
  name String
  website String
}